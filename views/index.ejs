<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dados do Firestore</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Dados do Firestore</h1>

        <!-- Formulário de busca -->
        <form action="/search" method="POST" class="search-form">
            <label for="date">Buscar por Data (YYYY-MM-DD):</label>
            <input type="text" id="date" name="date" placeholder="Digite a data (YYYY-MM-DD)" required>
            <button type="submit">Buscar</button>
        </form>


        <!-- Exibir mensagens de erro -->
        <% if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>

        <!-- Resultados da busca -->
        <% if (searchResults && searchResults.length > 0) { %>
            <h2>Resultados da Busca</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Data</th>
                        <th>Hora</th>
                        <th>Umidade (%)</th>
                        <th>Temperatura (°C)</th>
                    </tr>
                </thead>
                <tbody>
                    <% searchResults.forEach(item => { %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.date %></td>
                            <td><%= item.time %></td>
                            <td><%= item.hmd %></td>
                            <td><%= item.temp %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else if (searchResults) { %>
            <p class="no-results">Nenhum dado encontrado para a data informada.</p>
        <% } %>

        <!-- Todos os dados -->
        <h2>Todos os Dados</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Data</th>
                    <th>Hora</th>
                    <th>Umidade (%)</th>
                    <th>Temperatura (°C)</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.date %></td>
                        <td><%= item.time %></td>
                        <td><%= item.hmd %></td>
                        <td><%= item.temp %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>